# ===========================================
# SupportLens API - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# Server Configuration
PORT=3000
NODE_ENV=production

# CORS Origins (comma-separated for multiple origins)
# Example: http://localhost:3001,https://your-frontend.com
CORS_ORIGINS=*

# Firebase Admin SDK Configuration
# Option 1: Service Account JSON (for local development)
# FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Option 2: Individual environment variables (recommended for production)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Google Gemini AI API Key
GEMINI_API_KEY=your-gemini-api-key

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=supportlens-kb
